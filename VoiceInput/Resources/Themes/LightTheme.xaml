<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme Colors -->
    <Color x:Key="PrimaryColor">#0078D4</Color>
    <Color x:Key="PrimaryColorLight">#106EBE</Color>
    <Color x:Key="PrimaryColorDark">#005A9E</Color>
    
    <Color x:Key="AccentColor">#0078D4</Color>
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="SurfaceColor">#F3F3F3</Color>
    <Color x:Key="TextPrimaryColor">#000000</Color>
    <Color x:Key="TextSecondaryColor">#666666</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryColorLight}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryColorDark}"/>
    
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    
    <!-- Window Background -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FAFAFA"/>
    
    <!-- Control States -->
    <SolidColorBrush x:Key="ControlHoverBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="ControlPressedBrush" Color="#C0C0C0"/>
    <SolidColorBrush x:Key="ControlDisabledBrush" Color="#F0F0F0"/>
    
    <!-- Border -->
    <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#F0F0F0"/>
    
</ResourceDictionary>