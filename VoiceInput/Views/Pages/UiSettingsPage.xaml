<Page x:Class="VoiceInput.Views.Pages.UiSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600">
    
    <StackPanel>
        <TextBlock Text="界面设置" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,16"/>
        
        <!-- 主题设置 -->
        <Border Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="主题" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                
                <Label Content="应用主题" Style="{StaticResource ModernLabelStyle}"/>
                <ComboBox x:Name="ThemeComboBox" 
                        Style="{StaticResource ModernComboBoxStyle}"
                        SelectedIndex="0"
                        SelectionChanged="ThemeComboBox_SelectionChanged">
                    <ComboBoxItem Content="浅色主题" Tag="Light"/>
                    <ComboBoxItem Content="深色主题" Tag="Dark"/>
                    <ComboBoxItem Content="跟随系统" Tag="System"/>
                </ComboBox>
                <TextBlock Text="选择应用程序的配色主题" 
                         Foreground="{DynamicResource TextSecondaryBrush}" 
                         FontSize="12" 
                         Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- 音频波形设置 -->
        <Border Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="音频波形显示" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                
                <CheckBox x:Name="ShowWaveformCheckBox" 
                        Content="录音时显示音频波形" 
                        IsChecked="True"
                        Style="{StaticResource ModernCheckBoxStyle}"
                        Checked="ShowWaveformCheckBox_Changed"
                        Unchecked="ShowWaveformCheckBox_Changed"/>
                <TextBlock Text="在屏幕底部显示实时音频波形，直观展示录音状态" 
                         Foreground="{DynamicResource TextSecondaryBrush}" 
                         FontSize="12" 
                         Margin="24,4,0,0"/>
                
                <StackPanel x:Name="WaveformSettingsPanel" Margin="0,16,0,0">
                    <!-- 波形高度 -->
                    <Label Content="波形高度（像素）" Style="{StaticResource ModernLabelStyle}"/>
                    <ui:NumberBox x:Name="WaveformHeightBox" 
                                Value="100"
                                Minimum="50"
                                Maximum="200"
                                SmallChange="10"
                                LargeChange="25"
                                SpinButtonPlacementMode="Inline"/>
                    <TextBlock Text="调整音频波形窗口的高度" 
                             Foreground="{DynamicResource TextSecondaryBrush}" 
                             FontSize="12" 
                             Margin="0,4,0,16"/>
                    
                    <!-- 波形颜色方案 -->
                    <Label Content="波形配色" Style="{StaticResource ModernLabelStyle}"/>
                    <ComboBox x:Name="WaveformColorComboBox" 
                            Style="{StaticResource ModernComboBoxStyle}"
                            SelectedIndex="0">
                        <ComboBoxItem Content="蓝色渐变" Tag="Blue"/>
                        <ComboBoxItem Content="绿色渐变" Tag="Green"/>
                        <ComboBoxItem Content="紫色渐变" Tag="Purple"/>
                        <ComboBoxItem Content="彩虹渐变" Tag="Rainbow"/>
                    </ComboBox>
                    <TextBlock Text="选择音频波形的配色方案" 
                             Foreground="{DynamicResource TextSecondaryBrush}" 
                             FontSize="12" 
                             Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- 窗口设置 -->
        <Border Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="窗口行为" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                
                <CheckBox x:Name="MinimizeToTrayCheckBox" 
                        Content="最小化到系统托盘" 
                        IsChecked="True"
                        Style="{StaticResource ModernCheckBoxStyle}"/>
                <TextBlock Text="关闭窗口时最小化到系统托盘而不是退出程序" 
                         Foreground="{DynamicResource TextSecondaryBrush}" 
                         FontSize="12" 
                         Margin="24,4,0,0"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>