{
  "VoiceInput": {
    "Hotkey": "F3",
    "AutoStart": true,
    "MuteWhileRecording": true,
    "AudioSettings": {
      "SampleRate": 16000,
      "BitsPerSample": 16,
      "Channels": 1
    },
    "WhisperAPI": {
      "Model": "whisper-1",
      "BaseUrl": "https://api.openai.com/v1/audio/transcriptions",
      "Timeout": 30,
      "Language": "auto",
      "OutputMode": "transcription",
      "Temperature": 0.0,
      "ResponseFormat": "json"
    },
    "GPTAPI": {
      "Model": "gpt-4o-mini",
      "BaseUrl": "https://api.openai.com/v1/chat/completions",
      "Timeout": 30,
      "Temperature": 0.0,
      "MaxTokens": 1000
    },
    "ProxySettings": {
      "Enabled": false,
      "Address": "",
      "Port": 0,
      "RequiresAuthentication": false
    },
    "UI": {
      "Theme": "Light",
      "ShowWaveform": true,
      "WaveformHeight": 100,
      "WaveformColor": "Blue",
      "MinimizeToTray": true
    },
    "TtsAPI": {
      "UseOpenAIConfig": true,
      "Model": "tts-1",
      "Speed": 1.0,
      "Volume": 80,
      "VoiceMapping": {
        "zh": "nova",
        "en": "echo",
        "ja": "alloy",
        "default": "nova"
      }
    }
  }
}